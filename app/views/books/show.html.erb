<h2><%= @book.title %></h2>

<% if @book.years.any? %>
  <ul>
    <% @book.years.each do |year| %>
      <li><%= link_to year.year, year_path(year) %></li>
    <% end %>
  </ul>
<% else %>
  <h3>What year(s) did you read this book?</h3>
  <%= form_for @year do |f| %>
    <%= f.label :year %>
    <%= f.text_field :year %>
    <%= f.hidden_field :book_ids, value: @book.id %>
    <p><%= f.submit %></p>
  <% end %>
<% end %>

<h3>Add another year:</h3>
<%= form_for @year do |f| %>
  <%= f.label :year %>
  <%= f.text_field :year %>
  <%= f.hidden_field :book_ids, value: @book.id %>
  <p><%= f.submit %></p>
<% end %>

<% if @book.notes.any? %>
  <ul>
    <% @book.notes.each do |note| %>
      <li><%= note.text %></li>
      <li><%= note.text %></li>
    <% end %>
  </ul>
<% else %>
<%= form_for [@book, @note] do |f| %>
<%= f.label :text %>
<%= f.text_field :text %>
<p><%= f.submit 'Add a Note' %></p>
  <% end  %>
<% end %>
