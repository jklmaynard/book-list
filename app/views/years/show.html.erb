<h2><%= @year.year %></h2>

<% if @year.books.any? %>
  <h4>Here are your books for this year: </h4>
  <ul>
    <% @year.books.each do |book| %>
      <li><%= link_to book.title, book_path(book) %></li>
    <% end %>
  </ul>
<% end %>

<h3>Add book</h3>
<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author_first_name %>
  <%= f.text_field :author_first_name %>
  <%= f.label :author_last_name %>
  <%= f.text_field :author_last_name %>
  <%= f.hidden_field :year_ids, value: @year.id %>
  <p><%= f.submit %></p>
<% end %>

<% if @year.notes.any? %>
  <ul>
    <% @year.notes.each do |note| %>
      <li><%= note.text %></li>
    <% end %>
  </ul>
<% else %>
<%= form_for [@year, @note] do |f| %>
<%= f.label :text %>
<%= f.text_field :text %>
<p><%= f.submit 'Add a Note' %></p>
  <% end  %>
<% end %>

<%= link_to 'Previous'%>
<%= link_to 'Next'%>
